<div class="container">
  <% @sleeps.each do |sleep| %>
    <%= link_to sleep_path(sleep) do %>
      <div class="card-service">
        <%= image_tag("img-test.jpg") %>
        <div class="card-service-infos">
          <h2><%= sleep.name %></h2>
          <p> <%= sleep.address%></p>
          <% day_open = sleep.opening_hours.select { |hours|  hours.day_en == (Date.today.strftime("%A")) } %>
          <% hour_open = day_open.select { |day| Time.now.hour > day.opens.hour && Time.now.hour < day.closes.hour } %>
          <% if hour_open == [] %>
            <span id="close">Closed</span>
          <% else %>
            <span id="open">Open</span>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
