<div class="container">
  <div class="grid">
    <div class="form">
      <%= simple_form_for [ @sleep, @request ] do |f| %>
        <%= f.input :start_date, as: :date, html5: true, label: "Check-in" %>
        <%= f.input :end_date, as: :date, html5: true, label: "Check-out" %>
        <%= f.submit t('new.request.btn'), class: "btn button-primary" %>
      <% end %>
    </div>
  </div>
</div>
